# VERIDEX Environment Configuration
# Copy this file to .env and configure with your values

# Admin credentials (REQUIRED - set before first run)
# Generate a secure password: python3 -c "import secrets; print(secrets.token_urlsafe(16))"
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# JWT Secret (REQUIRED - auto-generated on first run if not set)
# Generate: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
